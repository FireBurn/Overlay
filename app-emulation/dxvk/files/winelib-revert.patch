     opt_nopackage=1
     opt_devbuild=1
     ;;
+  "--winelib")
+    opt_winelib=1
+    crossfile="build-wine"
+    ;;
   *)
     echo "Unrecognized option: $1" >&2
     exit 1
@@ -61,8 +66,10 @@ function build_arch {
