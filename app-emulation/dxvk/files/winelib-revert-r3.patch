@@ -35,6 +36,10 @@ while [ $# -gt 0 ]; do
     opt_nopackage=1
     opt_devbuild=1
     ;;
+  "--winelib")
+    opt_winelib=1
+    crossfile="build-wine"
+    ;;
   *)
     echo "Unrecognized option: $1" >&2
     exit 1
@@ -61,8 +66,10 @@ function build_arch {
   ninja install
 
   if [ $opt_devbuild -eq 0 ]; then
-    # get rid of some useless .a files
-    rm "$DXVK_BUILD_DIR/x$1/"*.!(dll)
